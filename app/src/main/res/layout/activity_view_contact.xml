<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view_contact"

    android:background="#ef5350">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/niceone">
        <TextView
            android:background="#E8E8E8E8"
            android:paddingLeft="10dp"
            android:id="@+id/view_contact_name"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:hint="Name">
        </TextView>
        <TextView
            android:background="#E8E8E8E8"
            android:paddingLeft="10dp"
            android:id="@+id/view_contact_phone"
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:hint="Phone">
        </TextView>
        <TextView
            android:background="#E8E8E8E8"
            android:paddingLeft="10dp"
            android:id="@+id/view_contact_email"
            android:layout_marginTop="160dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:hint="Email">
        </TextView>
        <TextView
            android:background="#E8E8E8E8"
            android:paddingLeft="10dp"
            android:id="@+id/view_contact_address"
            android:layout_marginTop="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:hint="Address">
        </TextView>

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            android:id="@+id/view_my_contact"
            android:textColor="#ffffff"
            android:background="#ef5350"
            android:layout_below="@id/view_contact_address"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>



    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="top"
        android:layout_marginTop="90dp"
        android:id="@+id/view_Profile_image"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_camera_alt_24"
        app:civ_circle_background_color="#d4d4d4">
    </de.hdodenhof.circleimageview.CircleImageView>


</RelativeLayout>